<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no" />
    <link rel="shortcut icon" href="/images/favicon.png" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Prompt" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/stylesheets/template/style.css" />
  </head>
  <body class="layout-list">
    <section class="header">
      <div class="container">
        <div class="header-wrapper">
          <img class="logo" src="/images/logo_v2.png" />
        </div>
        <div class="action-wrapper">
          <div class="action-content">
            <div class="nano">
              <div class="nano-content">
                <div class="panel-group accordion-wrapper" role="tablist" aria-multiselectable="true">
                  <div class="panel panel-default">
                    <div class="panel-heading" role="tab">
                      <h4 class="panel-title">
                      <a role="button" data-toggle="collapse" href="#action-collapse-one" aria-expanded="true" aria-controls="action-collapse-one">
                        <i class="fa fa-chevron-down" aria-hidden="true"></i> Ingredients Suggestions
                      </a>
                      </h4>
                    </div>
                    <div id="action-collapse-one" class="panel-collapse collapse in" role="tabpanel">
                      <div class="panel-body">
                        <% for(var idx = 0; idx < Ingredients.length; idx ++){ if(!Ingredients[idx].dataValues.isSelected){ %>
                        <button type="button" class="btn btn-cf-1"><i class="fa fa-plus" aria-hidden="true"></i><%= Ingredients[idx].dataValues.name %></button>
                        <% } } %>
                      </div>
                    </div>
                  </div>
                </div>
                <hr />
                <div class="panel-group accordion-wrapper" role="tablist" aria-multiselectable="true">
                  <div class="panel panel-default">
                    <div class="panel-heading" role="tab">
                      <h4 class="panel-title">
                      <a role="button" data-toggle="collapse" href="#action-collapse-two" aria-expanded="true" aria-controls="action-collapse-two">
                        <i class="fa fa-chevron-down" aria-hidden="true"></i> My Kitchen
                      </a>
                      </h4>
                    </div>
                    <div id="action-collapse-two" class="panel-collapse collapse in" role="tabpanel">
                      <div class="panel-body">
                        <form class="form-inline hidden">
                          <div class="form-group form-block">
                            <div class="input-group">
                              <div class="input-group-addon">
                                <i class="fa fa-search" aria-hidden="true"></i>
                              </div>
                              <input id="txt-search-icon" type="text" class="form-control" placeholder="Search">
                            </div>
                          </div>
                        </form>
                        <% for(var idx = 0; idx < Ingredients.length; idx ++){ if(Ingredients[idx].dataValues.isSelected){ %>
                        <button type="button" class="btn btn-cf-1"><i class="fa fa-close" aria-hidden="true"></i><%= Ingredients[idx].dataValues.name %></button>
                        <% } } %>
                      </div>
                    </div>
                  </div>
                </div>
                <hr />
                <div class="panel-group accordion-wrapper" role="tablist" aria-multiselectable="true">
                  <div class="panel panel-default">
                    <div class="panel-heading" role="tab">
                      <h4 class="panel-title">
                      <a role="button" data-toggle="collapse" href="#action-collapse-three" aria-expanded="true" aria-controls="action-collapse-three">
                        <i class="fa fa-chevron-down" aria-hidden="true"></i> Meal Types
                      </a>
                      </h4>
                    </div>
                    <div id="action-collapse-three" class="panel-collapse collapse in" role="tabpanel">
                      <div class="panel-body">
                        <% for(var idx = 0; idx < MealTypes.length; idx ++){ %>
                        <button type="button" class="btn btn-cf-1 passive"></i><%= MealTypes[idx].dataValues.name %></button>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
                <hr />
                <div class="panel-group accordion-wrapper" role="tablist" aria-multiselectable="true">
                  <div class="panel panel-default">
                    <div class="panel-heading" role="tab">
                      <h4 class="panel-title">
                      <a role="button" data-toggle="collapse" href="#action-collapse-four" aria-expanded="true" aria-controls="action-collapse-four">
                        <i class="fa fa-chevron-down" aria-hidden="true"></i> Cuisines
                      </a>
                      </h4>
                    </div>
                    <div id="action-collapse-four" class="panel-collapse collapse in" role="tabpanel">
                      <div class="panel-body">
                        <% for(var idx = 0; idx < CuisineTypes.length; idx ++){ %>
                        <button type="button" class="btn btn-cf-1 passive"></i><%= CuisineTypes[idx].dataValues.name %></button>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <a class="action-trigger"></a>
        </div>
      </div>
    </section>
    <section class="content">
      <div class="container">
        <div class="content-wrapper">
          <ul class="list-wrapper">
            <% for(var idx = 0; idx < 15; idx++){ %>
            <li>
              <a href="/template/14">
                <div class="image" style="background-image:url('https://source.unsplash.com/FlmXvqlD-nI/800x400');"></div>
                <p class="desc">
                  <span class="title">Lorem ipsum</span>
                </p>
              </a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </section>
    <section class="footer">
      <div class="container">
        <p class="copyright text-center">
          Copyright (c) 2016 Copyright Holder All Rights Reserved.<br />
          Lilianti Wibiesono & Septhianto Diga
        </p>
      </div>
    </section>
    <section class="blank-layer hidden"></section>
  </body>
  <script src="https://code.jquery.com/jquery-3.1.0.min.js" integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s=" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script src="/javascripts/jquery.nanoscroller.min.js"></script>
  <script src="/javascripts/main.js"></script>
</html>
